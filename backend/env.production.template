# üö® PRODUCTION ENVIRONMENT CONFIGURATION TEMPLATE
# ‚ö†Ô∏è CRITICAL: Generate secure secrets and update all default values before deployment

# Application Configuration
APP_NAME="AI ERP SaaS Platform"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# üîê SECURITY - CRITICAL: Generate secure secrets using: openssl rand -base64 32
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_SECRET_KEY
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_JWT_SECRET
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration - Use PostgreSQL in production with SSL
DATABASE_URL=postgresql://username:password@hostname:5432/database_name?sslmode=require
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration - Use secure Redis instance
REDIS_URL=redis://username:password@hostname:6379/0
REDIS_POOL_SIZE=20

# üîí CORS - Restrict to production domains only
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,app.yourdomain.com

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:; frame-ancestors 'none'; base-uri 'self'; form-action 'self'"

# API Documentation - Disable in production
ENABLE_API_DOCS=false
API_DOCS_URL=/docs

# Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=2000

# File Upload Security
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.tiff
UPLOAD_DIR=uploads

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=CHANGE_ME_SMTP_PASSWORD
SMTP_TLS=true
SMTP_SSL=false

# Payment Processing - Paystack (South African)
PAYSTACK_SECRET_KEY=CHANGE_ME_PAYSTACK_SECRET_KEY
PAYSTACK_PUBLIC_KEY=CHANGE_ME_PAYSTACK_PUBLIC_KEY
PAYSTACK_WEBHOOK_SECRET=CHANGE_ME_PAYSTACK_WEBHOOK_SECRET

# Azure Form Recognizer (OCR)
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=CHANGE_ME_AZURE_FORM_RECOGNIZER_KEY

# Azure AD / Office 365 Authentication
AZURE_CLIENT_ID=CHANGE_ME_AZURE_CLIENT_ID
AZURE_CLIENT_SECRET=CHANGE_ME_AZURE_CLIENT_SECRET
AZURE_TENANT_ID=CHANGE_ME_AZURE_TENANT_ID
AZURE_REDIRECT_URI=https://yourdomain.com/auth/azure/callback

# Monitoring and Error Reporting
ENABLE_MONITORING=true
SENTRY_DSN=CHANGE_ME_SENTRY_DSN
OTEL_ENDPOINT=https://your-otel-endpoint.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Performance
MAX_WORKERS=8
WORKER_TIMEOUT=300

# Business Rules
AUTO_APPROVAL_LIMIT=10000.0
DUPLICATE_THRESHOLD=0.95
FRAUD_THRESHOLD=0.8
MAX_PROCESSING_TIME_HOURS=48

# ERP Integration
ERP_SYNC_ENABLED=true
ERP_SYNC_INTERVAL_MINUTES=30
ERP_RETRY_ATTEMPTS=3

# Multi-tenancy
ENABLE_MULTI_TENANCY=true
TENANT_ISOLATION_LEVEL=database

# Compliance and Audit
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
ENABLE_GDPR_COMPLIANCE=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=90

# Feature Flags
ENABLE_AI_INSIGHTS=true
ENABLE_REAL_TIME_DASHBOARD=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AUTOMATED_WORKFLOWS=true

# Notification
NOTIFICATION_ENABLED=true
NOTIFICATION_EMAIL_FROM=noreply@yourdomain.com
NOTIFICATION_SMS_ENABLED=false

# Development Features - Disable in production
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SQL_LOGGING=false






